# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/monitoring-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
MONITORING_RATE_LIMIT_MAX=50
REPORT_RATE_LIMIT_MAX=10
UPLOAD_RATE_LIMIT_MAX=5

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@monitoring-platform.com
FROM_NAME=Monitoring Platform

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# External APIs
# Google Cloud Natural Language API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json

# Azure Text Analytics
AZURE_TEXT_ANALYTICS_KEY=your-azure-key
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Hugging Face
HUGGING_FACE_API_KEY=your-hugging-face-api-key

# Instagram Scraping (if using official API)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Web Scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=5

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
PUPPETEER_VIEWPORT_WIDTH=1920
PUPPETEER_VIEWPORT_HEIGHT=1080

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20971520
LOG_MAX_FILES=5
LOG_RETENTION_DAYS=30

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring & Analytics
MONITORING_INTERVAL=300000
DATA_RETENTION_DAYS=90
CLEANUP_INTERVAL=86400000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# Health Check
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Development Only
DEBUG=monitoring-platform:*
VERBOSE_LOGGING=true

# Production Only
# SSL_KEY_PATH=path/to/ssl/key.pem
# SSL_CERT_PATH=path/to/ssl/cert.pem
# CLUSTER_MODE=true
# CLUSTER_WORKERS=4