# Docker Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=monitoring-platform
MONGODB_URI=mongodb://admin:password123@mongodb:27017/monitoring-platform?authSource=admin

# Backend Configuration
NODE_ENV=production
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@monitoring-platform.com

# Monitoring Configuration
MONITORING_INTERVAL=60000
REQUEST_TIMEOUT=30000
MAX_RETRIES=3

# Webhook Configuration
WEBHOOK_TIMEOUT=10000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000
REACT_APP_ENVIRONMENT=production

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:80
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# SSL Configuration (for production)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30